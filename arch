<body>
    <header>
        <h1>Academic Year Timeline</h1>
        
        <!-- Campus Selector -->
        <div class="campus-selector">
            <select id="campusFilter" onchange="filterCampus()">
                <option value="all">All Campuses</option>
                <option value="north">North Campus</option>
                <option value="south">South Campus</option>
                <option value="east">East Campus</option>
                <option value="west">West Campus</option>
            </select>
        </div>

        <!-- Previous department structure and legend remain the same -->
    </header>

    <div class="timeline">
        <!-- Example of how events would be tagged for filtering -->
        <div class="month left">
            <div class="content">
                <h2>September</h2>
                <div class="event rtcc" data-campus="all">
                    <p>College and Career Fair<span class="campus-tag">All Campuses</span></p>
                    <p class="team">For: Juniors and Seniors</p>
                    <p class="team">Organized by: RTCC</p>
                </div>
                <div class="event signature-events" data-campus="north">
                    <p>Campus Art Exhibition<span class="campus-tag">North Campus</span></p>
                    <p class="team">For: All students</p>
                    <p class="team">Organized by: Arts Department</p>
                </div>
            </div>
        </div>
        <!-- Additional months would follow the same pattern -->
    </div>

    <script>
        function filterCampus() {
            const selectedCampus = document.getElementById('campusFilter').value;
            const events = document.querySelectorAll('.event');
            
            events.forEach(event => {
                const campusAttribute = event.getAttribute('data-campus');
                if (selectedCampus === 'all' || campusAttribute === selectedCampus || campusAttribute === 'all') {
                    event.classList.remove('hidden-campus');
                } else {
                    event.classList.add('hidden-campus');
                }
            });
        }
    </script>
</body>
